<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>

<AnchorPane prefHeight="593.0" prefWidth="773.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1">
    <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="779.0" spacing="15" style="-fx-background-color: #f9a825; -fx-padding: 20;">
        
        <!-- Título -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Cadastrar prato" />
        
        <!-- Seção Produto -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <Label style="-fx-font-weight: bold;" text="Informações do Produto" />
            <TextField promptText="Nome do prato" />
            <ComboBox promptText="Categoria" />
            <TextArea prefRowCount="3" promptText="Descrição do prato" />
        </VBox>
        
        <!-- Seção Ingredientes -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10;">
            <Label style="-fx-font-weight: bold;" text="Ficha Técnica - Ingredientes" />
            <HBox spacing="10">
                <TextField promptText="Ingrediente" />
                <TextField prefWidth="100" promptText="Quantidade" />
                <ComboBox prefWidth="120" promptText="Unidade" />
                <Button style="-fx-background-color: #DCDCDC; -fx-text-fill: white; -fx-font-weight: bold;" text="Adicionar ➕">
               <textFill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop>
                           <color>
                              <Color red="1.0" green="1.0" blue="1.0" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="1.0" green="1.0" blue="1.0" />
                           </color>
                        </Stop>
                     </stops>
                  </RadialGradient>
               </textFill></Button>
            </HBox>
            
            <!-- Tabela de Ingredientes -->
            <TableView prefHeight="200">
                <columns>
                    <TableColumn prefWidth="200" text="Ingrediente" />
                    <TableColumn prefWidth="120" text="Quantidade" />
                    <TableColumn prefWidth="100" text="Unidade" />
                    <TableColumn prefWidth="100" text="Ações" />
                </columns>
            </TableView>
        </VBox>
        
        <!-- Botões de Ação -->
        <HBox alignment="CENTER" spacing="20">
            <Button style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold;" text="Salvar prato" />
            <Button style="-fx-background-color: red; -fx-text-fill: white;" text="Cancelar" />
        </HBox>
    </VBox>
</AnchorPane>
